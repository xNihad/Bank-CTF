<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <link rel="stylesheet" href="dashboard.css">

    <link rel="stylesheet" href="support.css">
</head>
<body>
    <div class="app">
        <header class="app-header">
            <div class="app-header-logo">
                <div class="logo">
                    <span class="logo-icon">
                        <img src="https://assets.codepen.io/285131/almeria-logo.svg" />
                    </span>
                    <h1 class="logo-title">
                        <span>Almeria</span>
                        <span>NeoBank</span>
                    </h1>
                </div>
            </div>
            <div class="app-header-navigation">
                <div class="tabs">
                    <a href="#">
                        Overview
                    </a>
                    <a href="#" class="active">
                        Payments
                    </a>
                    <a href="#">
                        Cards
                    </a>
                    <a href="#">
                        Account
                    </a>
                    <a href="#">
                        System
                    </a>
                    <a href="#">
                        Business
                    </a>
                </div>
            </div>
            <div class="app-header-actions">
                <button class="user-profile">
                    <span></span>
                    <span>
                        <img src="https://assets.codepen.io/285131/almeria-avatar.jpeg" />
                    </span>
                </button>
                <div class="app-header-actions-buttons">
                    <button class="icon-button large">
                        <i class="ph-magnifying-glass"></i>
                    </button>
                    <button class="icon-button large">
                        <i class="ph-bell"></i>
                    </button>
                </div>
            </div>
            <div class="app-header-mobile">
                <button class="icon-button large">
                    <i class="ph-list"></i>
                </button>
            </div>
    
        </header>
        <main class="main-content">
            <nav class="navigation" style="padding: 10px;">
                <a href="/dashboard">
                    <i class="ph-browsers"></i>
                    <span>Dashboard</span>
                </a>
                <a href="/support">
                    <i class="ph-check-square"></i>
                    <span>Support</span>
                </a>
                
            </nav>
            <div class="container">
                <div class="card">
                    <h1>Your Support Requests</h1>
                    <div class="table-container">
                        <table class="ticket-table">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>Title</th>
                                    <th>Message</th>
                                    <th>Attachment</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (supports && supports.length > 0) { %>
                                    <% supports.forEach((support, index) => { %>
                                        <tr>
                                            <td><%= index + 1 %></td>
                                            <td><%= support.username %></td>
                                            <td><%= support.message %></td>
                                            <td>
                                                <% if (support.file_path) { %>
                                                    <a href="/<%= support.file_path %>" 
                                                       class="attachment-link" 
                                                       target="_blank"
                                                       title="View uploaded image">
                                                        <img src="/<%= support.file_path %>"   
                                                             alt="Preview" 
                                                             class="thumbnail"
                                                             width="50" 
                                                             height="50">
                                                    </a>
                                                <% } else { %>
                                                    <span class="no-attachment">No attachment</span>
                                                <% } %>
                                            </td>
                                            <td><%= new Date(support.created_at).toLocaleString() %></td>
                                        </tr>
                                    <% }); %>
                                <% } else { %>
                                    <tr>
                                        <td colspan="5" class="no-data">No support requests found</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            <!-- USER IS HERE SOMEWHERE-->
                <div class="card">
                    <h1>Submit a New Request</h1>
                    <form action="/support/submit" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="username">Username</label>
                            <input type="text" 
                                   id="cafer" 
                                   name="username" 
                                   required>
                        </div>
                
                        <div class="form-group">
                            <label for="message">Message</label>
                            <textarea id="message" 
                                      name="message" 
                                      required></textarea>
                        </div>
                
                        <div class="file-upload">
                            <label for="upload">Upload Screenshot </label>
                            <input type="file" 
                                   id="upload" 
                                   name="upload" 
                                   accept="image/*">
                        </div>
    
                        <button type="submit" class="submit-btn">Submit</button>
                    </form>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
